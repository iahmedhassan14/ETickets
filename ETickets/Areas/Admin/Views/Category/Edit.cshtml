@model Category
<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-12">
            <h2 class="display-6">Edit Category</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <form method="post">

                <div class="mb-3">
                    <label class="form-label"></label>
                    <input type="text" class="form-control" placeholder="Category Name" asp-for="Name">
                </div>

                <div class="d-flex">
                    <button type="submit" class="btn btn-primary me-2">Update</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>