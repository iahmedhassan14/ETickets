@model IEnumerable<Category>
@{
    var i = 1;
}
<div class="container">
    <div class="row mb-3 align-items-center">
        <div class="col-md-6">
            <h2 class="display-6">All Categories</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a href="/Admin/Category/Create" class="fa-solid fa-plus icon-Style"></a>
        </div>
    </div>
<div class="row">
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@(i++)</th>
                        <td>@item.Name</td>
                        <td class="div-Icons">
                            <a href="/Admin/Category/Edit/@item.Id" class="fa-solid fa-pen-to-square edit-icon"></a>
                            <a href="/Admin/Category/Delete/@item.Id" class="fa-solid fa-trash delete-icon"></a>

                        </td>
                    </tr>
                }
    </tbody>
</table>

</div>

</div>
