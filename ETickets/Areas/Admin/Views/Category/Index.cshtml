@model IEnumerable<Category>

<div class="container col-12">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="display-6 mb-0">All Categories</h2>
        </div>
        <div class="col-md-6 text-md-end">
            <a asp-area="Admin" asp-controller="Category" asp-action="Create"
               class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add New Category
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" width="5%">#</th>
                            <th scope="col">Category Name</th>
                            <th scope="col" width="15%" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int counter = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@(counter++)</th>
                                <td>@item.Name</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger ms-2 delete-btn">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>